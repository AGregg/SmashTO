@model SmashTO.Models.SwissRound

<script type="text/javascript">
    $(document).ready(function () {
        $(".tag").css("cursor", "pointer");

        $(".tag").on("click", function() {
            var row = $(this).closest("tr");
            row.find("td").css("background-color", "#121212");
            $(this).css("background-color", "#ff0f0f");
            row.find(".winnerId").val($(this).find(".id").val());
        });
    });
</script>

@{
    ViewBag.Title = "Swiss Bracket Round " + Model.RoundNumber;
}
@section featured {
    <section class="featured">
        <div class="content-wrapper">
            <hgroup class="title">
                <h1>@ViewBag.Title.</h1>
            </hgroup>
        </div>
    </section>
}

@using (Html.BeginForm("SwissBracket", "Bracket", IsPost))
{
    @Html.HiddenFor(x => x.TournamentId)
    @Html.HiddenFor(x => x.RoundNumber)
    <table>
        <thead>
            <tr style="font-family: bold">
                <td style="width:5%">Wins</td>
                <td style="width:10%">Player 1</td>
                <td style="width:10%">Rating</td>
                <td style="width:5%"></td>
                <td style="width:5%">Wins</td>
                <td style="width:10%">Player 2</td>
                <td style="width:10%">Rating</td>
            </tr>
        </thead>
        @for (int i = 0; i < Model.Matches.Count(); i++)
        {
            <tr>
                <td>
                    @Html.HiddenFor(x => x.Matches[i].Player1Wins)
                    @Html.DisplayTextFor(x => x.Matches[i].Player1Wins)
                </td>
                <td class="tag">
                    @Html.HiddenFor(x => x.Matches[i].Player1.PlayerId, new {@class="id"})
                    @Html.HiddenFor(x => x.Matches[i].Player1.PlayerName)
                    @Html.DisplayTextFor(x => x.Matches[i].Player1.PlayerName)
                </td>
                <td>
                    @Html.HiddenFor(x => x.Matches[i].Player1.Rating)
                    @Html.DisplayTextFor(x => x.Matches[i].Player1.Rating)
                </td>
                <td>VS</td>
                <td>
                    @Html.HiddenFor(x => x.Matches[i].Player2Wins)
                    @Html.DisplayTextFor(x => x.Matches[i].Player2Wins)
                </td>
                <td class="tag">
                    @Html.HiddenFor(x => x.Matches[i].Player2.PlayerId, new { @class = "id" })
                    @Html.HiddenFor(x => x.Matches[i].Player2.PlayerName)
                    @Html.DisplayTextFor(x => x.Matches[i].Player2.PlayerName)
                </td>
                <td>
                    @Html.HiddenFor(x => x.Matches[i].Player2.Rating)
                    @Html.DisplayTextFor(x => x.Matches[i].Player2.Rating)
                </td>
                @Html.HiddenFor(x => x.Matches[i].WinnerId, new { @class = "winnerId" })
            </tr>
        }
    </table>
    <p>
        <input type="submit" value="Next Round" />
    </p>
}